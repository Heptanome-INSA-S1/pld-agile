<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <!-- This label will be mapped by the counterLabel object of the view -->
            <Label text="Hello">
                <font>
                    <Font size="20"/>
                </font>
            </Label>
            <!-- This label will be mapped by the counterLabel object of the view -->
            <Label fx:id="counterLabel" text="0">
                <font>
                    <Font size="20"/>
                </font>
            </Label>
            <!-- The button will launch the method increment of the class view -->
            <Button text="Click to increment" onAction="#increment"/>
            <Button text="Open PlanView" onAction="#planView"/>
        </VBox>
    </center>
</BorderPane>